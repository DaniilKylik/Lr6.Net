@model User

<h2>Реєстрація користувача</h2>
<form asp-action="Register" method="post">
    <div>
        <label>Ім'я</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Дата народження</label>
        <input asp-for="DateOfBirth" type="date" />
    </div>
    <button type="submit">Підтвердити</button>
</form>

